<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<VBox alignment="center"
      minHeight="Infinity"
      xmlns="http://javafx.com/javafx/8.0.121"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ishto.controller.MainScreenController">
    <Text stroke="BLACK" text="The Classical Ishto" translateY="-100">
        <font>
            <Font name="Verdana" size="50.0" /> 
        </font>
    </Text>
    <Button fx:id="play" minHeight="70" minWidth="300" onAction="#onplayNowButtonClickAction" text="Play Now!" translateY="50">
        <font>
            <Font name="Verdana" size="20.0" />
        </font>
    </Button>
    <Button fx:id="rule" minHeight="50" onAction="#onRulesButtonClickedAction" text="Know The Rules" translateY="100">
        <font>
            <Font name="Verdana" size="20.0" />
        </font>
    </Button>
</VBox>